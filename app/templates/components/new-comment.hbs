{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="userName">User Name</label>
          {{input value=userName id="userName"}}
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>
        <div class="form-group">
          <label for="comment">Comment</label>
          {{textarea value=comment id="comment"}}
        </div>
        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'newCommentForm'}}>New Comment</button>
{{/if}}
